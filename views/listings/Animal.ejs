<% layout("/layouts/boilerPlate") %>
<body>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">

    <% for(let listing of AllEarths){ %>
      <a href="/Animals/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card" >
            <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
            <div class="card-img-overlay">
              <i class="fa-regular fa-heart"></i> </div>
            <div class="card-body">
              <p class="card-text"> <b><%= listing.title %> </b></p>
            </div>
          </div>
        </a>
          <% } %>
        </div>
    
</body>
</html>