<% layout("/layouts/boilerPlate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3 ">
            
    
        <h3 class="mb-3">Your Blog's Details</h3>
        </div>
    
        
    
        <div class="card col-6 offset-3 show-card listing-card" >
            <img class="card-img-top show-img" src="<%= listing.image %>" alt="listing_image">
            <div class="card-body">
              <p class="card-text">
               <b> <%= listing.title %> </b> <br>
               <%= listing.description %> <br>
               <%= listing.country %> <br>
               <%= listing.location %>
    
    
    
              
              </p>
            </div>
          </div>
    
    
    
        
        <br>
    
    
       
    
        
    
        </div>
    
        <div class="col-8 offset-2 mb-3">
          <% if (currUser){ %>

          <h4>Leave a Review</h4>
          <form action="/Animals/<%= listing.id %>/reviews" method="post">
            <div class="mb-3 mt-3">
              <label for="rating">Ratings</label>
              <input type="range" class="form-range" min="1" max="5" name="review[rating]" id="">
            </div>

            <div class="mb-3 mt-3">
              <label for="comment" class="">Comment</label>
              <textarea required name="review[comment]"  cols="30" rows="5" id="comment" class="form-control"></textarea>
            </div>
            <button class="btn btn-dark add-btn">Submit</button>
          </form>
          <% } %>
        </div>
    
        <hr>
        <h4>All Reviews</h4>
        
<div class="row">

        <% for(review of listing.reviews) {%>
          <div class="card col-5 ms-3 mb-3">
            <div class="card-body">
              <h5 class="card-title">@<%= review.author.username %></h5>
              <p class="card-text">
                <%= review.comment %>

              </p>
              <p class="card-text">
                <%= review.rating %>star
              </p>

              <form action="/Animals/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="mb-3">
                <button class="btn btn-dark add-btn">Delete</button>
            </form>
            </div>

          </div>
        <% } %>

      </div>
    
    


</body>
</html>